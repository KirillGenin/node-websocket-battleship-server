{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}